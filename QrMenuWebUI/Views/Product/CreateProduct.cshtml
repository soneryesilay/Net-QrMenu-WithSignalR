@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Ekleme</div>
						</div>
						
						<div class="card-body">
							<div class="form-group">
								<label for="productName">Ürün adını giriniz</label>
								<input type="text" class="form-control" asp-for="productName" id="productName" placeholder="Ürün Adı">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="price">Ürün fiyatı giriniz</label>
								<input type="text" class="form-control" asp-for="price" id="price" placeholder="Ürün Fiyatı">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="imageUrl">Ürün görseli ekleyiniz </label>
								<input type="text" class="form-control" asp-for="imageUrl" id="imageUrl" placeholder="Ürün Görseli">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="categoryID">Ürün kategorisini seçiniz</label>
								@Html.DropDownListFor(x=>x.categoryID,(List<SelectListItem>)ViewBag.v, new {@class="form-control"})
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="description">Ürün açıklamasını giriniz</label>
								<input type="text" class="form-control" asp-for="description" id="description" placeholder="Ürün Açıklaması">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürünü Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

