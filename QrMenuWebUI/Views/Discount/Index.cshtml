@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirim ile ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
							
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">İndirim Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.discountID</td>
										<td>@item.title</td>
										<td>@item.amout</td>
										<td><a href="/Discount/DeleteDiscount/@item.discountID" class=" btn btn-outline-warning">Durum</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.discountID" class=" btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.discountID" class=" btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Discount/CreateDiscount" class=" btn btn-outline-primary">Yeni İndirimli Ürün Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



