
@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz. Sayfa düzeni için sadece bir tane hakkımızda alanı giriniz!
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.aboutID</td>
										<td>@item.title</td>
										<td>@item.description</td>
										<td><a href="/About/DeleteAbout/@item.aboutID" class=" btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.aboutID" class=" btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout" class=" btn btn-outline-primary">Hakkımda Yazısı Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

