@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgileri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim alanı ile ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz. Sayfa düzeni için sadece bir tane iletişim alanı giriniz!
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th> 
									<th scope="col">Telefon</th> 
									<th scope="col">Mail</th> 
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.contactID</td>
										<td>@item.location</td>
										<td>@item.phoneNumber</td>
										<td>@item.mailAdress</td>
										<td>@item.footerDescription</td>
										<td><a href="/Contact/DeleteContact/@item.contactID" class=" btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.contactID" class=" btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact" class=" btn btn-outline-primary">İletişim Bilgileri Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



