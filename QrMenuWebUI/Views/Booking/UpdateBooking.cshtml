@model UpdateBookingDto

@{
	ViewData["Title"] = "UpdateBooking";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Güncelleme</div>
						</div>
						<input type ="hidden" asp-for="bookingID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="customerName">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="customerName" id="customerName" placeholder="Adı Soyadı">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="phoneNumber">Telefon Numarası</label>
								<input type="number" class="form-control" asp-for="phoneNumber" id="phoneNumber" placeholder="Telefon Numarası">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="mailAdress">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="mailAdress" id="mailAdress" placeholder="Mail Adresi">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="personCount">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="personCount" id="personCount" placeholder="Kişi Sayısı">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="date" id="date">
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-primary">Rezervasyonu Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


